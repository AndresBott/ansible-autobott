# File: parts/proxy_location.j2
{% if item.1.proxy_port is defined %}
        proxy_pass http://127.0.0.1:{{ item.1.proxy_port  }};
        proxy_set_header Host             $host;
        proxy_set_header X-Real-IP        $remote_addr;
        proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
{% if item.1.proxy_lines is defined %}
{% for line in item.1.proxy_lines %}
        {{ line }};
{% endfor %}
{% endif %}
{% endif %}