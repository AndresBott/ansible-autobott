# {{ ansible_managed }}

/var/log/php/*.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 770 root root
    sharedscripts
    postrotate

        [ ! -f /var/run/php/php{{ php_version }}-fpm.pid ] || kill -USR1 `cat /var/run/php/php{{ php_version }}-fpm.pid`
    endscript
}



